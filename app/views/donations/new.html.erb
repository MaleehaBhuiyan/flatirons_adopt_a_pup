<div class='error'>
  <% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
</div>


<h1>Make a donation!</h1>

<%= form_for(@donation) do |f| %>

    <p style="text-align:center"><%= f.label :username %>
    <%= f.collection_select :user_id, @users , :id, :username %></p>

    <p style="text-align:center"><%= f.label :pet %>
    <%= f.collection_select :pet_id, @pets , :id, :name %></p>

    <p style="text-align:center"><%= f.label :donation_amount %>
    <%= f.number_field :donation_amount %></p>

    <p style="text-align:center"><%= f.label :date %>
    <%= f.date_field :date %></p>
    
    <p style="text-align:center"><%= f.submit %></p>

<% end %>

