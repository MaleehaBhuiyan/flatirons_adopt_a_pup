  <% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
</div>



<%= form_for(@post) do |f| %>

    <p style="text-align:center"><%= f.label :username %>
    <%= f.collection_select :user_id, User.all , :id, :username %></p>

    <p style="text-align:center"><%= f.label :post_title %>
    <%= f.text_field :post_title %></p>

    <p style="text-align:center"><%= f.label :description %>
    <%= f.text_field :description %></p>

    <p style="text-align:center"><%= f.label :post_img_url %>
    <%= f.text_field :post_img_url %></p>

    <p style="text-align:center"><%= f.submit %></p>

<% end %>
